{
  "name": "displayTrigger",
  "version": "0.0.1",
  "description": "Trigger video display events from a remote system",
  "main": "app.js",
  "dependencies": {
    "core-js": "^2.0.0",
    "normalize.css": "^4.0.0"
  },
  "devDependencies": {
    "webpack": "^1.12.4",
    "webpack-dev-server": "^1.12.1",
    "webpack-validator": "^2.1.3",

    "babel-core": "^6.1.20",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.1.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",

    "eslint": "^2.2.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-native-over-lodash": "^1.0.0",
    
    "karma": "^0.13.22",
    "karma-webpack": "^1.7.0",
    "karma-jasmine": "^0.3.8",
    "karma-chrome-launcher": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "jasmine-core": "^2.4.1",
    
    "null-loader": "^0.1.1",
    "file-loader": "^0.8.4",
    "jsx-loader": "^0.13.2",
    "css-loader": "^0.22.0",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.0",
    
    "open": "0.0.5",
    "glob": "^7.0.0",
    "copyfiles": "^0.2.1",
    
    "node-sass": "^3.4.2",
    "minimist": "^1.2.0",
    "phantomjs-prebuilt": "^2.0.0",
    "rimraf": "^2.4.3",
    "bower-webpack-plugin": "^0.1.9"
  },
  "config": {
    "ghooks": {
      "pre-commit": "opt --in pre-commit --exec \"npm run validate\""
    }
  },
  "scripts": {
    "start": "webpack-dev-server",
    "serve": "node server.js --env=dev",
    "serve:dist": "node server.js --env=dist",
    
    "test": "karma start",
    "test:watch": "karma start --autoWatch=true --singleRun=false",

    "validate": "npm-run-all --parallel validate-webpack:* lint test",
    "validate-webpack:dev": "webpack-validator webpack.config.js --env.dev",
    "validate-webpack:dist": "webpack-validator webpack.config.js --env.dist",
    
    "dist": "npm run copy & webpack --env=dist",
    "lint": "eslint ./src",
    "copy": "copyfiles -f ./src/index.html ./src/favicon.ico ./dist",
    "clean": "rimraf dist/*"
  },
  "repository": "git@github.com:SuperLimitBreak/displayTrigger.git",
  "keywords": [
    "displayTrigger",
    "html5",
    "projector",
    "midi"
  ],
  "author": "superlimitbreak.uk",
  "license": "GPL3",
  "private": true
}
